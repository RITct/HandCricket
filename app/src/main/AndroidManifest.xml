<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.shijin.oddoreven">


    <application android:allowBackup="true"
        android:label="HandCricket"
        android:icon="@drawable/app_icon"
        android:theme="@style/AppTheme">

			<activity
				android:name=".MainActivity"
				android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" 
				>
				<intent-filter>
					<action android:name="android.intent.action.MAIN"/>
					<category android:name="android.intent.category.LAUNCHER"/>
				</intent-filter>
			</activity>
			<activity
				android:name=".GameActivity" android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
			<activity
				android:name=".ScoreActivity" android:configChanges="orientation|screenSize"
				android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>
